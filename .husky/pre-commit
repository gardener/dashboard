# .husky/pre-commit
. .husky/common.sh
. "$(dirname "$0")/husky-user-choice.sh"

if ! command -v ggshield &> /dev/null; then
  echo "Error: ggshield is not installed. Please visit https://docs.gitguardian.com/ggshield-docs/getting-started for installation instructions."
  exit 1
fi

ggshield secret scan pre-commit "$@"
