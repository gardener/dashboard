{
  "name": "@gardener-dashboard/monitor",
  "version": "1.0.0",
  "description": "Prometheus Monitoring",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "packages/monitor"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "lint": "yarn workspace @gardener-dashboard/packages eslint -c eslint.config.js ./monitor --max-warnings=0",
    "lint-sarif": "yarn lint --format=@microsoft/eslint-formatter-sarif",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "test-coverage": "yarn test --coverage",
    "build": "rimraf dist && yarn install && rollup -c ../rollup.config.js"
  },
  "dependencies": {
    "express": "^5.0.0",
    "http-errors": "^2.0.0",
    "prom-client": "^15.1.0",
    "response-time": "^2.3.2"
  },
  "peerDependencies": {
    "@gardener-dashboard/logger": "workspace:^",
    "@gardener-dashboard/test-utils": "workspace:^"
  },
  "devDependencies": {
    "@gardener-dashboard/logger": "workspace:^",
    "@gardener-dashboard/test-utils": "workspace:^",
    "@jest/globals": "^29.7.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "restoreMocks": true,
    "clearMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": "^22.7.0"
  }
}
