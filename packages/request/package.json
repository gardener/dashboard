{
  "name": "@gardener-dashboard/request",
  "version": "1.0.0",
  "description": "HTTP Client",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "packages/request"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "lint-sarif": "yarn lint --format=@microsoft/eslint-formatter-sarif",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "test-coverage": "yarn test --coverage",
    "build": "rm -rf dist && yarn install && rollup -c ../rollup.config.js"
  },
  "dependencies": {
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "type-is": "^2.0.0"
  },
  "peerDependencies": {
    "@gardener-dashboard/logger": "workspace:^"
  },
  "devDependencies": {
    "@gardener-dashboard/logger": "workspace:^",
    "@gardener-dashboard/test-utils": "workspace:^",
    "@jest/globals": "^29.7.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "abort-controller": "^3.0.0",
    "eslint": "^9.11.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "neostandard": "^0.12.0"
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 84.5,
        "functions": 97,
        "lines": 95,
        "statements": 95
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": "^22.7.0"
  }
}
