{
  "name": "@gardener-dashboard/logger",
  "version": "1.0.0",
  "description": "Logger",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "packages/logger"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ext .js .",
    "test": "jest",
    "test-coverage": "yarn test --coverage"
  },
  "dependencies": {
    "chalk": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "globals": {},
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "no-console": "error"
    }
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "jest-date-mock"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 68,
        "functions": 100,
        "lines": 96,
        "statements": 96
      }
    }
  },
  "engines": {
    "node": "^15.11.0",
    "yarn": "^2.4.1"
  }
}
