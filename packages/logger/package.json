{
  "name": "@gardener-dashboard/logger",
  "version": "1.0.0",
  "description": "Logger",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "packages/logger"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "lint-sarif": "yarn lint --format=@microsoft/eslint-formatter-sarif",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "test-coverage": "yarn test --coverage",
    "build": "rimraf dist && yarn install && rollup -c rollup.config.js"
  },
  "dependencies": {
    "chalk": "^5.0.0"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "eslint": "^9.11.0",
    "eslint-import-resolver-pnp": "^0.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-require-node-import-prefix": "^0.0.2",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.0.0",
    "jest-date-mock": "^1.0.8",
    "neostandard": "^0.12.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.41.1"
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "jest-date-mock"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 69,
        "functions": 100,
        "lines": 96,
        "statements": 96
      }
    }
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": "22.18.0"
  }
}
