dashboard:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          dashboard:
            inputs:
              repos:
                source: ~ # default
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/dashboard'
            target: dashboard
          dashboard-terminal-bootstrapper:
            inputs:
              repos:
                source: ~ # default
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/dashboard-terminal-bootstrapper'
            target: dashboard-terminal-bootstrapper
    steps: ~
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
      steps:
        check:
          image: 'eu.gcr.io/gardener-project/3rd/node:16-alpine3.15'
        check-docforge:
          image: 'eu.gcr.io/gardener-project/3rd/golang:1.16.7'
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/bump_version'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C017DNNNENQ' # garden-dashboard channel
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
        publish:
          dockerimages:
            dashboard:
              tag_as_latest: true
            dashboard-terminal-bootstrapper:
              tag_as_latest: true
