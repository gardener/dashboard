dashboard:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      component_descriptor:
        ocm_repository: europe-docker.pkg.dev/gardener-project/snapshots
        ocm_repository_mappings:
          - repository: europe-docker.pkg.dev/gardener-project/releases
      publish:
        oci-builder: docker-buildx
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          gardener-dashboard:
            inputs:
              repos:
                source: ~ # default
            image: 'europe-docker.pkg.dev/gardener-project/snapshots/gardener/dashboard'
            target: dashboard
            resource_labels:
            - name: 'gardener.cloud/cve-categorisation'
              value:
                network_exposure: 'public'
                authentication_enforced: false
                user_interaction: 'end-user'
                confidentiality_requirement: 'high'
                integrity_requirement: 'high'
                availability_requirement: 'low'
    steps:
      verify:
        image: 'node:22'
  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
      steps:
        check:
          image: 'node:22-alpine3.20'
    release:
      traits:
        version:
          preprocess: 'finalize'
        component_descriptor:
          ocm_repository: europe-docker.pkg.dev/gardener-project/releases
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/bump_version'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C017DNNNENQ' # garden-dashboard channel
              slack_cfg_name: 'scp_workspace'
        publish:
          dockerimages:
            gardener-dashboard:
              image: europe-docker.pkg.dev/gardener-project/releases/gardener/dashboard
              tag_as_latest: true
              extra_push_targets: # may be dropped after all users updated to new registry
                - eu.gcr.io/gardener-project/gardener/dashboard
