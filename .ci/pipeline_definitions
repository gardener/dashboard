dashboard:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          dashboard:
            inputs:
              repos:
                source: ~ # default
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/dashboard'
    steps: ~
  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/prepare_release'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'k8s-garden-dashboard'
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
        publish:
          dockerimages:
            dashboard:
              tag_as_latest: true
