{
  "name": "@gardener-dashboard/backend",
  "version": "1.49.0",
  "description": "Gardener Dashboard Server",
  "license": "Apache-2.0",
  "author": "Koser, Holger <holger.koser@sap.com>",
  "contributors": [
    "Herz, Andreas <andreas.herz@sap.com>",
    "Sutter, Peter <peter.sutter@sap.com>",
    "Gross, Lukas <lukas.gross@sap.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "server.js",
  "files": [
    "lib",
    "server.js"
  ],
  "scripts": {
    "serve": "nodemon --ext js --watch lib server.js",
    "start": "node server.js",
    "lint": "eslint --ext .js server.js .",
    "test": "jest",
    "test-coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@gardener-dashboard/kube-client": "workspace:*",
    "@gardener-dashboard/kube-config": "workspace:*",
    "@gardener-dashboard/logger": "workspace:*",
    "@gardener-dashboard/request": "workspace:*",
    "@godaddy/terminus": "^4.1.2",
    "@octokit/rest": "^16.28.1",
    "base64url": "^3.0.1",
    "better-queue": "^3.8.10",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "delay": "^4.3.0",
    "express": "^4.17.1",
    "fnv-plus": "^1.2.12",
    "helmet": "^3.21.2",
    "http-errors": "^1.8.0",
    "jose": "^1.24.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "object-hash": "^2.0.0",
    "openid-client": "^3.1.1",
    "p-retry": "^4.2.0",
    "p-timeout": "^3.2.0",
    "sanitize-html": "^2.1.1",
    "semver": "^7.1.2",
    "showdown": "^1.9.1",
    "socket.io": "^2.3.0",
    "swagger-parser": "^8.0.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "abort-controller": "^3.0.0",
    "dockerfile-ast": "^0.0.19",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fast-json-patch": "^3.0.0-1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.2",
    "p-event": "^4.1.0",
    "path-to-regexp": "^6.2.0",
    "set-cookie-parser": "^2.3.5",
    "socket.io-client": "^2.3.0",
    "supertest": "^6.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2020": true,
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "globals": {
      "createAgent": true,
      "fixtures": true
    },
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {
      "no-console": "error",
      "no-debugger": "error"
    },
    "ignorePatterns": [
      "my*.js"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/*.js",
          "**/test/**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/test-ignore/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 62,
        "functions": 90,
        "lines": 87,
        "statements": 87
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "engines": {
    "node": "^15.11.0",
    "yarn": "^2.4.1"
  }
}
