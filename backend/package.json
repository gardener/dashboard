{
  "name": "@gardener-dashboard/backend",
  "version": "1.67.0",
  "description": "Gardener Dashboard Server",
  "license": "Apache-2.0",
  "author": "Koser, Holger <holger.koser@sap.com>",
  "contributors": [
    "Herz, Andreas <andreas.herz@sap.com>",
    "Sutter, Peter <peter.sutter@sap.com>",
    "Gross, Lukas <lukas.gross@sap.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "server.js",
  "files": [
    "lib",
    "server.js"
  ],
  "scripts": {
    "serve": "nodemon --ext js --watch lib server.js",
    "start": "node server.js",
    "lint": "eslint --ext .js server.js .",
    "test": "jest",
    "test-coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@gardener-dashboard/kube-client": "workspace:*",
    "@gardener-dashboard/kube-config": "workspace:*",
    "@gardener-dashboard/logger": "workspace:*",
    "@gardener-dashboard/monitor": "workspace:*",
    "@gardener-dashboard/request": "workspace:*",
    "@godaddy/terminus": "^4.10.2",
    "@octokit/rest": "^18.12.0",
    "base64url": "^3.0.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "delay": "^4.4.1",
    "express": "^4.18.1",
    "express-static-gzip": "^2.1.7",
    "fnv-plus": "^1.3.1",
    "helmet": "^5.1.0",
    "http-errors": "^2.0.0",
    "jose": "^4.9.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "4.17.21",
    "morgan": "^1.10.0",
    "object-hash": "^3.0.0",
    "openid-client": "^5.1.6",
    "p-limit": "^3.1.0",
    "p-retry": "^4.6.2",
    "p-timeout": "^4.1.0",
    "sanitize-html": "^2.7.0",
    "semver": "^7.3.7",
    "showdown": "^2.1.0",
    "socket.io": "^4.5.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@gardener-dashboard/test-utils": "workspace:*",
    "abort-controller": "^3.0.0",
    "dockerfile-ast": "^0.4.2",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.5",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "fast-json-patch": "^3.1.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.16",
    "p-event": "^4.2.0",
    "path-to-regexp": "^6.2.1",
    "set-cookie-parser": "^2.4.8",
    "socket.io-client": "^4.5.4",
    "supertest": "^6.2.3"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "globals": {
      "createAgent": true,
      "fixtures": true
    },
    "rules": {
      "no-console": "error",
      "no-debugger": "error"
    },
    "ignorePatterns": [
      "public",
      "my*.js"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/*.js",
          "**/test/**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/test-ignore/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 68,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": "^18.4.0"
  }
}
