{
  "name": "@gardener-dashboard/backend",
  "version": "1.72.0",
  "description": "Gardener Dashboard Server",
  "license": "Apache-2.0",
  "author": "Koser, Holger <holger.koser@sap.com>",
  "contributors": [
    "Herz, Andreas <andreas.herz@sap.com>",
    "Sutter, Peter <peter.sutter@sap.com>",
    "Gross, Lukas <lukas.gross@sap.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gardener/dashboard.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/gardener/dashboard/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "server.js",
  "files": [
    "lib",
    "server.js"
  ],
  "scripts": {
    "serve": "node server.js",
    "lint": "eslint --ext .js server.js .",
    "test": "jest",
    "test-coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@gardener-dashboard/kube-client": "workspace:^",
    "@gardener-dashboard/kube-config": "workspace:^",
    "@gardener-dashboard/logger": "workspace:^",
    "@gardener-dashboard/monitor": "workspace:^",
    "@gardener-dashboard/request": "workspace:^",
    "@godaddy/terminus": "^4.12.1",
    "@octokit/auth-app": "^6.0.4",
    "@octokit/core": "^6.0.0",
    "@octokit/plugin-paginate-graphql": "^5.0.0",
    "@octokit/plugin-paginate-rest": "^10.0.0",
    "@octokit/plugin-request-log": "^5.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^11.0.0",
    "base64url": "^3.0.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.3",
    "express-static-gzip": "^2.1.7",
    "fnv-plus": "^1.3.1",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "jose": "^5.2.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "object-hash": "^3.0.0",
    "openapi-types": "^12.1.3",
    "openid-client": "^5.6.5",
    "p-limit": "5.0.0",
    "p-retry": "6.2.0",
    "p-timeout": "^6.0.0",
    "sanitize-html": "^2.12.1",
    "semver": "^7.6.0",
    "showdown": "^2.1.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@gardener-dashboard/test-utils": "workspace:^",
    "abort-controller": "^3.0.0",
    "dockerfile-ast": "^0.6.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "fast-json-patch": "^3.1.1",
    "jest": "^29.0.0",
    "p-event": "^6.0.0",
    "path-to-regexp": "^6.2.1",
    "set-cookie-parser": "^2.6.0",
    "socket.io-client": "^4.7.5",
    "supertest": "^6.3.4"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "globals": {
      "createAgent": true,
      "fixtures": true
    },
    "rules": {
      "no-console": "error",
      "no-debugger": "error"
    },
    "ignorePatterns": [
      "public",
      "my*.js"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/*.js",
          "**/test/**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "jest": {
    "restoreMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/test-ignore/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 68,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": "^20.5.0"
  }
}
